mixin post-classic(obj)
	.post-classic
		.post-classic-figure
			a(href='blog-post.html')
				+jpg(obj.img)
		.post-classic-caption
			h4.post-classic-title: a(href='blog-post.html')=obj.title
			ul.post-classic-meta
				li= obj.date
				li: a(href='#' class=obj.tagMod).post-classic-tag=obj.tag
				
mixin post-modern(obj)
	.post-modern(class=obj.classMod)
		.post-modern-figure
			a(href='blog-post.html')
				+jpg(obj.img)
			- if ( obj.badge )
				a(href='#' class=obj.badgeMod).badge=obj.badge
		.post-modern-caption
			p.post-modern-date=obj.date
			h4.post-modern-title: a(href='blog-post.html')=obj.title
			
mixin post-modern-text(obj)
	.post-modern(class=obj.classMod)
		.post-modern-caption
			p.post-modern-date=obj.date
			h4.post-modern-title: a(href='blog-post.html')=obj.title
			.post-modern-text
				block
			a(href='#' class=obj.badgeMod).badge=obj.badge
			
mixin post-corporate(obj)
	.post-corporate(class=obj.classMod)
		if (obj.classMod)
			.post-corporate-bg(style='background-image: url(images/' + obj.imgBg + '.jpg); background-size: cover;')
				
		a(href='#').badge=obj.date
		h4.post-corporate-title: a(href='blog-post.html')=obj.title
		.post-corporate-text
			block
		a(href='blog-post.html').post-corporate-link Read more
			span.icon.linearicons-arrow-right