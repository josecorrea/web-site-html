extends  ../_skeleton

block variables
  - var activeCategory = 'pages'
  - var pageName = 'Forms'

block page 
  // Page Header
  include ../sections/_header-classic

  +breadcrumbs({
    category: activeCategory,
    path: [pageName],
    img: 'images/bg-breadcrumbs-about.jpg'
  })

  // Forms
  section.section.section-md.bg-gray-1
    .container
      .row.row-50.justify-content-md-center.justify-content-xl-around
        .col-md-10.col-lg-6.col-xl-5
          h3 Login form
          // RD Mailform
          form.rd-form.rd-mailform.rd-form-centered
            .form-wrap
              input#login-email.form-input(type='email' name='email' data-constraints='@Email @Required')
              label.form-label(for='login-email') E-mail

            .form-wrap
              input#login-password.form-input(type='password' name='password' data-constraints='@Required')
              label.form-label(for='login-password') Password
            .form-wrap
              label.checkbox.checkbox-custom
                input(type='checkbox',  checked='')
                |  Rememeber Me

            .row.row-20.row-gutters-14
              .col-sm-4
                button.button.button-block.button-primary.button-lg(type='submit') Log in
              .col-sm-8
                a(href='#').button.button-lg.button-block.button-default-outline Create an account
        .col-md-10.col-lg-6.col-xl-5
            h3 Registration Form
            // RD Mailform
            form.rd-form.rd-mailform.rd-form-centered
              .form-wrap
                input#reg-name.form-input(type='text' name='name' data-constraints='@Required')
                label.form-label(for='reg-name') Name
              .form-wrap
                input#reg-email.form-input(type='email' name='email' data-constraints='@Email @Required')
                label.form-label(for='reg-email') E-mail

              .form-wrap
                input#reg-password.form-input(type='password' name='password' data-constraints='@Required')
                label.form-label(for='reg-password') Password


              button.button.button-block.button-primary.button-lg(type='submit') Sign Up

  // Subscribe to Our Newsletter

  section.section.section-xl.context-dark.text-center.bg-gray-700.bg-decorate
    .container: .row.justify-content-md-center: .col-md-9.col-lg-8.col-xl-7
      h3 Subscribe to Stay Informed


      form.rd-form.rd-mailform.rd-form-inline(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
        .form-wrap
          input.form-input(id="subscribe-form-email" type="email" name="email" data-constraints="@Email @Required")
          label.form-label(for="subscribe-form-email") Your E-mail
        .form-button
          button.button.button-secondary.button-lg(type="submit") Subscribe


  // Contact us
  include ../includes/_section-contact-form

  section.section.section-md.bg-default.text-center
    .container
      .row.justify-content-md-center
        .col-md-9.col-lg-7
          h3 Contact Form (with reCAPTCHA)
          // RD Mailform
          form.rd-form.rd-mailform(data-form-output='form-output-global', data-form-type='contact', method='post', action='bat/rd-mailform.php')
            .form-wrap
              input#contact-2-name.form-input(type='text' name='name' data-constraints='@Required')
              label.form-label(for='contact-2-name') Your Name
            .form-wrap
              input#contact-2-email.form-input(type='email' name='email' data-constraints='@Email @Required')
              label.form-label(for='contact-2-email') E-mail
            .form-wrap
              input#contact-2-phone.form-input(type='text' name='phone' data-constraints='@Numeric')
              label.form-label(for='contact-2-phone') Phone
            .form-wrap
              label.form-label(for='contact-2-message') Your Message
              textarea#contact-2-message.form-input(name='message' data-constraints='@Required')
            .row.row-20.justify-content-center.align-items-lg-end
              .col-12.col-xl-6
                .form-wrap.form-wrap-recaptcha
                  // Google captcha
                  .recaptcha#captcha1(data-sitekey='6LfZlSETAAAAAC5VW4R4tQP8Am_to4bM3dddxkEt')
              .col-12.col-xl-6
                button.button.button-block.button-lg.button-primary(type='submit') Send



  section.section.section-md.bg-gray-1.text-center
    .container: .row.justify-content-md-center: .col-md-9.col-lg-8.col-xl-7
      h3 MailChimp
      p.big Sign up to our newsletter and be the first to know about the latest news, special offers, events, and discounts.

      // Mailchimp
      form.rd-form.mailchimp-mailform.rd-form-inline(data-form-output='form-output-global' action='https://templatemonster.us15.list-manage.com/subscribe/post?u=ba5bb362073a413f48e4a7b90&id=8dc95d9dec' method='post')
        .form-wrap
          label.form-label(for='mailchimp-email') Enter your e-mail
          input#mailchimp-email.form-input(type='email' name='email' data-constraints='@Email @Required')
        .form-button
          button.button.button-primary.button-lg(type='submit') Subscribe

  section.section.section-md.bg-default.text-center
    .container: .row.justify-content-md-center: .col-md-9.col-lg-8.col-xl-7
      h3 Campaign Monitor
      p.big Sign up to our newsletter and be the first to know about latest news, special offers, events, and discounts.

      // Campaign Monitor
      form.rd-form.campaign-mailform.rd-form-inline(data-form-output='form-output-global' action='https://templatermonster.createsend.com/t/j/s/zjjikd/' method='post')
        .form-wrap
          label.form-label(for='campaign-email') Enter your e-mail
          input#campaign-email.form-input(type='email' name='cm-zjjikd-zjjikd' data-constraints='@Email @Required')
        .form-button
          button.button.button-primary.button-lg(type='submit') Subscribe


  // Page Footer
  include ../sections/_footer-minimal
